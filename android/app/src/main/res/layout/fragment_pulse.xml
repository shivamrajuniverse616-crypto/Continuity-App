<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background"
    tools:context=".ui.pulse.PulseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Pulse"
            android:fontFamily="serif"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How is your spirit feeling right now?"
            android:textColor="#6B7280"
            android:layout_marginBottom="32dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="24dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">
                
                <!-- Mood Icons Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="24dp">
                    
                    <ImageView
                        android:id="@+id/moodLow"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_nav_pulse"
                        app:tint="#9CA3AF"
                        android:background="@drawable/bg_mood_item"
                        android:padding="12dp"
                        android:layout_marginEnd="16dp"/>
                        
                    <ImageView
                        android:id="@+id/moodNeutral"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_nav_pulse"
                        app:tint="#9CA3AF"
                        android:background="@drawable/bg_mood_item"
                        android:padding="12dp"/> 
                        
                     <ImageView
                        android:id="@+id/moodHigh"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_nav_pulse"
                        app:tint="#9CA3AF"
                        android:background="@drawable/bg_mood_item"
                        android:padding="12dp"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/etMoodNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_field"
                    android:hint="Add a note (optional)"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="#9CA3AF"
                    android:textSize="14sp"/>
                                
                <Button
                    android:id="@+id/btnLogPulse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log Pulse"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/primary_blue"
                    android:textColor="@color/white"
                    app:elevation="0dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Pulses"
            android:fontFamily="serif"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>
            
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPulseHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutAnimation="@anim/layout_animation_fall_down"
            tools:itemCount="3"
            tools:listitem="@layout/item_pulse"/>

    </LinearLayout>
</ScrollView>
